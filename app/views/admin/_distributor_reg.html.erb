<%= form_for :client, :url => { :controller => :admin, :action => :savereg } do |f| %>
<%= hidden_field_tag('role', "Distributor") %>
<fieldset>
	<legend><h2>Enter User Details</h2></legend>
	<p>
		<label for="username" >Login:</label>
		<%= text_field :user, :username, :size => 40 %>
	</p>
	<p>
		<label for="password" >Password:</label>
		<%= text_field :user, :password, :size => 40 %>
	</p>
	<p>
		<label for="password_confirmation" >Confirm:</label>
		<%= text_field :user, :password_confirmation, :size => 40 %>
	</p>
</fieldset>
<br/>
<fieldset>
    <legend><h2>Mailing Options</h2></legend>
		<p>
		    Select Mailing Frequency for New Supplier Ads or Products
		    <br/>
			none <%= radio_button( :mailing_options, 'opts', '0', :checked => true) %> | 
		    As Available <%= radio_button( :mailing_options, 'opts', '1') %> | 
			Daily List Only <%= radio_button( :mailing_options, 'opts', '2') %> | 
			Weekly List Only <%= radio_button( :mailing_options, 'opts', '3') %>
		</p>
</fieldset>
<br/><br/>
<fieldset>
    <legend><h2>Enter User Details</h2></legend>
	<table>
		<tr>
			<td>
			<%= f.label :company %><br />
			<%= f.text_field :company %>
			</td>
		</tr>
	</table>	
	<table>
		<tr>
			<td>
			<%= f.label :email %><br />
			<%= f.text_field :email, :size => 40 %>
			</td>
		</tr>
	</table>
	<table>
		<tr>
			<td>
				<%= f.label :firstname %><br />
		    	<%= f.text_field :firstname %>
			</td>
			<td>
				<%= f.label :lastname %><br />
		    	<%= f.text_field :lastname %>
			</td>
		</tr>
	</table>
	<!--
	<p>
	  	<%= link_to_function "Optional: [Click] if you want to use our auto-fill features to receive Catalogs and Samples", :id	=> "link1" do |page|
	         page.visual_effect(:toggle_blind, 'info')
	  		end %>
	  </p>
	<div id="info" style="display: none;">
	-->
	<div id="info">		
	<table>
		<tr>
			<td>
				<%= f.label :phone %><br />
		    	<%= f.text_field :phone %>
			</td>
			<td>
				<%= f.label :fax %><br />
		    	<%= f.text_field :fax %>
			</td>
		</tr>
	</table>	
	<table>
		<tr>
			<td>
			    <%= f.label :mailing_address %><br />
			    <%= f.text_field :mailing_address %>
			</td>
		</tr>
		<tr>		
			<td>
			    <%= f.label :mailing_address2 %><br />
			    <%= f.text_field :mailing_address2 %>
			</td>
		</tr>
	</table>	
	<table>
		<tr>
			<td>
				    <%= f.label :mailing_city, 'City' %><br />
				    <%= f.text_field :mailing_city, :size => 30 %>
				</td>
				<td>
				    <%= f.label :mailing_state, 'State' %><br />
				    <%= f.text_field :mailing_state, :size => 4 %>
				</td>
				<td>
				    <%= f.label :mailing_zip, 'Zip' %><br />
				    <%= f.text_field :mailing_zip, :size => 5 %>
				</td>
				<td>
				    <%= f.label :mailing_country, 'Country' %><br />
				    <%= f.text_field :mailing_country, :size => 20 %>
			</td>
		</tr>
	</table>	
	<br />
	  <p>
	  		
	<%= link_to_function "[Click] for Different Shipping Address", "$('#shipping').toggle()" %>

	  </p>
	  <br />
		<div id="shipping" style="display:none;">  
			<table>
				<tr>
					<td>
					    <%= f.label :shipping_address %><br />
					    <%= f.text_field :shipping_address %>
					</td>
				</tr>
				<tr>		
					<td>
					    <%= f.label :shipping_address2 %><br />
					    <%= f.text_field :shipping_address2 %>
					</td>
				</tr>
			</table>	
			<table>
				<tr>
					<td>
						    <%= f.label :shipping_city, 'City' %><br />
						    <%= f.text_field :shipping_city, :size => 30 %>
						</td>
						<td>
						    <%= f.label :shipping_state, 'State' %><br />
						    <%= f.text_field :shipping_state, :size => 4 %>
						</td>
						<td>
						    <%= f.label :shipping_zip, 'Zip' %><br />
						    <%= f.text_field :shipping_zip, :size => 5 %>
						</td>
						<td>
						    <%= f.label :shipping_country, 'Country' %><br />
						    <%= f.text_field :shipping_country, :size => 20 %>
					</td>
				</tr>
			</table>	
	  </div>
  </div>
  </fieldset>
  <br /><br />
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
