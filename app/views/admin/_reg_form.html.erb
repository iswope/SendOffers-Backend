<% form_for :newclient, @newclient, :url => { :controller => :admin, :action => :savereg } do |f| %>
  	<%= f.error_messages %>
<table>
	<tr>
		<td>
		<%= f.label :email, 'Email: ' %>
		<%=h @email %>
		<%= hidden_field_tag('email', @email) %>
		</td>
	</tr>
	<tr>
		<td>
		<%= f.label :company %><br />
		<%= f.text_field :company %>
		</td>
	</tr>
</table>	
<table>
	<tr>
		<td>
			<%= f.label :firstname %><br />
	    	<%= f.text_field :firstname %>
		</td>
		<td>
			<%= f.label :lastname %><br />
	    	<%= f.text_field :lastname %>
		</td>
	</tr>
	<tr>
		<td>
			<%= f.label :phone %><br />
	    	<%= f.text_field :phone %>
		</td>
		<td>
			<%= f.label :fax %><br />
	    	<%= f.text_field :fax %>
		</td>
	</tr>
</table>	
<table>
	<tr>
		<td>
		    <%= f.label :mailing_address %><br />
		    <%= f.text_field :mailing_address %>
		</td>
	</tr>
	<tr>		
		<td>
		    <%= f.label :mailing_address2 %><br />
		    <%= f.text_field :mailing_address2 %>
		</td>
	</tr>
</table>	
<table>
	<tr>
		<td>
			    <%= f.label :mailing_city, 'City' %><br />
			    <%= f.text_field :mailing_city, :size => 30 %>
			</td>
			<td>
			    <%= f.label :mailing_state, 'State' %><br />
			    <%= f.text_field :mailing_state, :size => 4 %>
			</td>
			<td>
			    <%= f.label :mailing_zip, 'Zip' %><br />
			    <%= f.text_field :mailing_zip, :size => 5 %>
			</td>
			<td>
			    <%= f.label :mailing_country, 'Country' %><br />
			    <%= f.text_field :mailing_country, :size => 20 %>
		</td>
	</tr>
</table>	
<br />
  <p>
  	<%= link_to_function "[Click] for Different Shipping Address", :id	=> "link1" do |page|
         page.visual_effect(:toggle_blind, 'shipping')
  		end %>
  </p>
  <br />
	<div id="shipping" style="display:none;">  
		<table>
			<tr>
				<td>
				    <%= f.label :shipping_address %><br />
				    <%= f.text_field :shipping_address %>
				</td>
			</tr>
			<tr>		
				<td>
				    <%= f.label :shipping_address2 %><br />
				    <%= f.text_field :shipping_address2 %>
				</td>
			</tr>
		</table>	
		<table>
			<tr>
				<td>
					    <%= f.label :shipping_city, 'City' %><br />
					    <%= f.text_field :shipping_city, :size => 30 %>
					</td>
					<td>
					    <%= f.label :shipping_state, 'State' %><br />
					    <%= f.text_field :shipping_state, :size => 4 %>
					</td>
					<td>
					    <%= f.label :shipping_zip, 'Zip' %><br />
					    <%= f.text_field :shipping_zip, :size => 5 %>
					</td>
					<td>
					    <%= f.label :shipping_country, 'Country' %><br />
					    <%= f.text_field :shipping_country, :size => 20 %>
				</td>
			</tr>
		</table>	
  </div>
<br />
<% if @role == 'Supplier' %> 
	  <fieldset>
		<legend>If different from Primary (optional)</legend>
			  <p>
			    <%= f.label :leadname, "Contact Name for Leads" %><br />
			    <%= f.text_field :leadname %>
			  </p>  
			  <p>
			    <%= f.label :leademail, "Contact Email for Leads (1)" %><br />
			    <%= f.text_field :leademail %>
			  </p>
	  </fieldset>
	  <br />    
			  <p>
			    <%= f.label :seed_email, "Seed Email to go out when using Email Campaigns (for review etc.)" %><br />
			    <%= f.text_field :seed_email, :limit => 255 %>
			  </p>
	  <p>
	    <%= f.label :report_email %><br />
	    <%= f.text_field :report_email %>
	  </p>
	  <p>
	    <%= f.label :url, 'Web Site used on Flyers' %><br />
	    <%= f.text_field :web, :size => 40 %>
	  </p>	  
<% end %>  
  <br />
  <br />
  <br /><br />
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
